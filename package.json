{
  "name": "bot-rer-a",
  "version": "1.0.0",
  "description": "Chat bot with RER A",
  "main": "src/bot.js",
  "scripts": {
    "test": "mocha './tests/**/*.test.js'",
    "coverage": "istanbul cover _mocha --report lcovonly -- './tests/**/*.test.js' && cat ./coverage/lcov.info | COVERALLS_REPO_TOKEN=Mp1OWFxAaeTFKxsnij1bVr0cZWIg10ELw ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "watch": "babel --watch=./src --out-dir=./build"
  },
  "bin": {
    "mocha": "./node_modules/.bin/mocha",
    "_mocha": "./node_modules/.bin/_mocha",
    "babel": "./node_modules/.bin/babel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/na-ji/bot-rer-a.git"
  },
  "keywords": [
    "bot",
    "wit",
    "rer"
  ],
  "semistandard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "it",
      "before"
    ],
    "plugins": [
      "flowtype"
    ]
  },
  "author": "Naji Astier <naji.astier@gmail.com> (https://www.naji-astier.com)",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/na-ji/bot-rer-a/issues"
  },
  "homepage": "https://github.com/na-ji/bot-rer-a#readme",
  "dependencies": {
    "lodash": "^4.17.2",
    "node-wit": "^4.2.0",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.11.1",
    "eslint-plugin-flowtype": "^2.29.1",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.2.0"
  }
}
